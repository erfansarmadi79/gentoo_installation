##Disk
```
fdisk /dev/sda
 o
 n
 p
 1
 
 
 +400M
 n
 p
 2

 +4G
 n
echo p
 3
 
 
 t
 2
 82
 a
 1
 w
 
 ##Formatting partitions
 
 mkfs.ext2 /dev/sda1
 mkswap /dev/sda2
 swapon /dev/sda2
 mkfs.ext4 /dev/sda3
 mount /dev/sda3 /mnt/gentoo
 
 cd /mnt/gentoo
 ###DownloadSTAGE####
 1. wget https://bouncer.gentoo.org/fetch/root/all/releases/amd64/autobuilds/20220807T170536Z/stage3-amd64-openrc-20220807T170536Z.tar.xz
 or
 2. links https://gentoo.org/downloads    ###select stage3 for download
 
 tar xpvf stage3-*.tar.xz --xattrs-include='*.*' --numeric-owner
 
mkdir --parents /mnt/gentoo/etc/portage/repos.conf

cp /mnt/gentoo/usr/share/portage/config/repos.conf /mnt/gentoo/etc/portage/repos.conf/gentoo.conf
cp --dereference /etc/resolv.conf /mnt/gentoo/etc/

mount --types proc /proc /mnt/gentoo/proc
mount --rbind /sys /mnt/gentoo/sys
mount --make-rslave /mnt/gentoo/sys
mount --rbind /dev /mnt/gentoo/dev
mount --make-rslave /mnt/gentoo/dev

chroot /mnt/gentoo /bin/bash
source /etc/profile
export PS1="(chroot) ${PS1}"

mount /dev/sda1 /boot

emerge-webrsync

emerge --info | grep ^USE

less /var/db/repos/gentoo/profiles/use.desc

q

##SetTimeZone

ls /usr/share/zoneinfo

echo "Europe/Brussels" > /etc/timezone

emerge --config sys-libs/timezone-data

nano -w /etc/locale.gen  
======>>>  

en_US ISO-8859-1
en_US.UTF-8 UTF-8
de_DE ISO-8859-1
de_DE.UTF-8 UTF-8

==========>>>>>


locale-gen 

eselect locale list 

eselect locale set 9 ====> en_US.utf8

env-update && source /etc/profile && export PS1="(chroot) ${PS1}"

Yes

emerge --ask sys-kernel/gentoo-sources

eselect kernel list

eselect kernel set 1

emerge --ask sys-apps/pciutils

cd /usr/src/linux

## make menuconfig
## make && make modules_install
## make install


echo "sys-kernel/genkernel -firmware" > /etc/portage/package.use/genkernel
emerge --ask sys-kernel/genkernel

nano -w /etc/fstab

==========>>>

/dev/sda1	/boot	ext2	noauto,noatime	0 2
/dev/sda2	none	 ext4	sw            	0 0
/dev/sda3	/    	ext4	noatime       	0 1

=========>>>>>

##genkernel --install --no-ramdisk-modules initramfs


##HostName
nano -w /etc/conf.d/hostname
    =====>>>>hostname="hostname"
    
    
emerge --ask --noreplace net-misc/netifrc

nano -w /etc/conf.d/net
====>>>>
config_eth0="dhcp"

##setpass word Root
cd /etc/init.d
passwd 

emerge --ask app-admin/sysklogd

rc-update add sysklogd default


emerge --ask sys-fs/e2fsprogs

emerge --ask net-misc/dhcpcd
rc-update add dhcpcd default


##GrubInstall

emerge --ask --verbose sys-boot/grub:2

 grub-install /dev/sda
 
 grub-mkconfig -o /boot/grub/grub.cfg
 exit
 cd
 umount -l /mnt/gentoo/dev{/shm,/pts,}
 umount -R /mnt/gentoo
 reboot
